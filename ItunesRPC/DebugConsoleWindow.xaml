<Window x:Class="ItunesRPC.DebugConsoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Console de débogage - iTunes RPC" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource TextPrimaryBrush}"
        Icon="pack://application:,,,/Resources/icon.ico">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- En-tête -->
        <Border Grid.Row="0" Style="{DynamicResource HeaderPanel}">
            <StackPanel>
                <TextBlock Text="Console de débogage" Style="{DynamicResource TitleTextBlock}"/>
                <TextBlock Text="Logs et informations de diagnostic" Style="{DynamicResource SubtitleTextBlock}"/>
            </StackPanel>
        </Border>
        
        <!-- Zone de logs -->
        <Border Grid.Row="1" Style="{DynamicResource ModernPanel}" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Barre d'outils de la console -->
                <Border Grid.Row="0" Style="{DynamicResource ToolbarPanel}">
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="ClearLogsButton" Content="Effacer" Tag="&#xE74D;" Style="{DynamicResource ToolbarIconButton}" Click="ClearLogs_Click" ToolTip="Effacer tous les logs"/>
                        <Separator Style="{DynamicResource ToolbarSeparator}"/>
                        <Button x:Name="SaveLogsButton" Content="Sauvegarder" Tag="&#xE74E;" Style="{DynamicResource ToolbarIconButton}" Click="SaveLogs_Click" ToolTip="Sauvegarder les logs dans un fichier"/>
                        <Separator Style="{DynamicResource ToolbarSeparator}"/>
                        <CheckBox x:Name="AutoScrollCheckBox" Content="Défilement automatique" IsChecked="True" Style="{DynamicResource ModernCheckBox}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <Separator Style="{DynamicResource ToolbarSeparator}"/>
                        <TextBlock Text="Niveau:" VerticalAlignment="Center" Margin="10,0,5,0" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <ComboBox x:Name="LogLevelComboBox" Width="100" SelectedIndex="0" SelectionChanged="LogLevel_Changed">
                            <ComboBoxItem Content="Tous"/>
                            <ComboBoxItem Content="Info"/>
                            <ComboBoxItem Content="Avertissement"/>
                            <ComboBoxItem Content="Erreur"/>
                        </ComboBox>
                    </StackPanel>
                </Border>
                
                <!-- Console de logs -->
                <ScrollViewer Grid.Row="1" x:Name="LogScrollViewer" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="0,5,0,0">
                    <TextBox x:Name="LogTextBox" 
                             IsReadOnly="True" 
                             TextWrapping="Wrap" 
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             Background="{DynamicResource SecondaryBrush}"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             FontFamily="Consolas, Courier New, monospace"
                             FontSize="12"
                             Padding="10"
                             BorderThickness="1"
                             BorderBrush="{DynamicResource BorderBrush}"
                             Text="Console de débogage initialisée...&#x0A;Prêt à recevoir les logs.&#x0A;"/>
                </ScrollViewer>
            </Grid>
        </Border>
        
        <!-- Barre de statut -->
        <Border Grid.Row="2" Style="{DynamicResource StatusBarPanel}" Padding="10,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="StatusText" Text="Prêt" Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,15,0">
                    <TextBlock Text="Logs: " Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                    <TextBlock x:Name="LogCountText" Text="0" Foreground="{DynamicResource AccentBrush}" VerticalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
                
                <Button Grid.Column="2" x:Name="CloseButton" Content="Fermer" Style="{DynamicResource SmallButton}" Click="Close_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>