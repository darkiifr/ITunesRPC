<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Durées d'animation -->
    <Duration x:Key="FastAnimationDuration">0:0:0.15</Duration>
    <Duration x:Key="StandardAnimationDuration">0:0:0.25</Duration>
    <Duration x:Key="SlowAnimationDuration">0:0:0.4</Duration>
    
    <!-- Fonctions d'accélération -->
    <QuadraticEase x:Key="StandardEasing" EasingMode="EaseOut"/>
    <CubicEase x:Key="SmoothEasing" EasingMode="EaseInOut"/>
    <BackEase x:Key="BackEasing" EasingMode="EaseOut" Amplitude="0.3"/>
    <ElasticEase x:Key="ElasticEasing" EasingMode="EaseOut" Oscillations="1" Springiness="3"/>
    
    <!-- Ressources de barre de progression -->
    <SolidColorBrush x:Key="ProgressBarBackgroundBrush" Color="#404045"/>
    
</ResourceDictionary>