<Window x:Class="ItunesRPC.UpdateConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItunesRPC"
        mc:Ignorable="d"
        Title="Configuration des mises à jour" Height="400" Width="550" 
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        Style="{StaticResource ModernWindow}"
        Icon="pack://application:,,,/Resources/icon.ico">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/ModernStyles.xaml"/>
                <ResourceDictionary Source="/Styles/ThemeStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="{StaticResource AppBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- En-tête -->
        <Border Grid.Row="0" Style="{StaticResource HeaderPanel}">
            <StackPanel>
                <TextBlock Text="Configuration des mises à jour" Style="{StaticResource TitleTextBlock}"/>
                <TextBlock Text="Configurez les paramètres de mise à jour depuis GitHub" Style="{StaticResource SubtitleTextBlock}"/>
            </StackPanel>
        </Border>
        
        <!-- Formulaire -->
        <Border Grid.Row="1" Style="{StaticResource ModernPanel}" Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Propriétaire GitHub -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Propriétaire GitHub:" Style="{StaticResource LabelTextBlock}" VerticalAlignment="Center" Margin="0,0,15,0"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="OwnerTextBox" Style="{StaticResource ModernTextBox}" Margin="0,5" Padding="8,6"/>
                
                <!-- Dépôt GitHub -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Dépôt GitHub:" Style="{StaticResource LabelTextBlock}" VerticalAlignment="Center" Margin="0,0,15,0"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="RepoTextBox" Style="{StaticResource ModernTextBox}" Margin="0,5" Padding="8,6"/>
                
                <!-- URL des releases -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="URL des releases:" Style="{StaticResource LabelTextBlock}" VerticalAlignment="Center" Margin="0,0,15,0"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="ReleaseUrlTextBox" Style="{StaticResource ModernTextBox}" Margin="0,5" Padding="8,6"/>
                
                <!-- Option de vérification au démarrage -->
                <CheckBox Grid.Row="3" Grid.Column="1" x:Name="CheckUpdateOnStartupCheckBox" Content="Vérifier les mises à jour au démarrage" Style="{StaticResource ModernCheckBox}" Margin="0,15,0,0"/>
                
                <!-- Informations -->
                <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource ModernPanel}" Margin="0,20,0,0" Background="{StaticResource PrimaryBrush}">
                    <TextBlock Style="{StaticResource ValueTextBlock}" TextWrapping="Wrap">
                        Ces paramètres permettent de configurer la source des mises à jour pour l'application.
                        <LineBreak/>
                        <LineBreak/>
                        Exemple: Pour le dépôt https://github.com/darkiifr/ITunesRPC
                            <LineBreak/>
                            - Propriétaire: darkiifr
                        <LineBreak/>
                        - Dépôt: ITunesRPC
                    </TextBlock>
                </Border>
            </Grid>
        </Border>
        
        <!-- Boutons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,10,20,20">
            <Button x:Name="SaveButton" Content="Enregistrer" Style="{StaticResource ModernButton}" Margin="0,0,15,0" Padding="20,8" Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="Annuler" Style="{StaticResource ModernButton}" Padding="20,8" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>